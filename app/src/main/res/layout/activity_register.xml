<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/slider_background"

    android:gravity="center"
    android:orientation="vertical"

    tools:context="com.example.shashankmohabia.morphme.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignBottom="@+id/editName"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/splash_logo" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_sort_by_alpha_white_24dp"
        android:ems="10"
        android:hint=" Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_cake_white_24dp"
        android:ems="10"
        android:hint=" Age"
        android:inputType="number" />

    <EditText
        android:id="@+id/editCountry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_flag_white_24dp"
        android:ems="10"
        android:hint=" Country"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEmailID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_email_white_24dp"
        android:ems="10"
        android:hint=" Email ID"
        android:inputType="textPersonName"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:ems="10"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textPasswordDoNotMatch"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="Passwords do not match"
        android:textSize="10sp"
        android:textColor="@color/error"
        android:visibility="invisible"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        app:cardBackgroundColor="@color/logoColor"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/cardRegister"
            android:layout_alignStart="@+id/cardRegister"
            android:layout_alignTop="@+id/cardRegister">

            <TextView
                android:id="@+id/textRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Register"
                android:textColor="#FF000000"
                android:textSize="25dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
