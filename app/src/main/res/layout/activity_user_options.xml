<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashankmohabia.morphme.MainGame.Fragments.AdminFragments.AllUsers.UserOptions.UserOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/showUserAnalysis"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="@color/logoColor"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/showUserAnalysis"
                android:layout_alignStart="@+id/showUserAnalysisText"
                android:layout_alignTop="@+id/login"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/showUserAnalysisText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Show Analysis"
                    android:textColor="#FF000000"
                    android:textSize="25dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/updateAdminStatus"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="@color/logoColor"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/updateAdminStatus"
                android:layout_alignStart="@+id/updateAdminStatusText"
                android:layout_alignTop="@+id/login"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/updateAdminStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FF000000"
                    android:textSize="25dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
