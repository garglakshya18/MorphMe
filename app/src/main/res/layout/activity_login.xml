<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/slider_background"
    tools:context="com.example.shashankmohabia.morphme.LoginActivity">


    <ImageView
        android:id="@+id/imageLoginScreenLogo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_above="@+id/loginEmailID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Logo"
        android:src="@mipmap/splash_logo" />

    <TextView
        android:id="@+id/loginError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginEmailID"
        android:layout_centerHorizontal="true"
        android:text="incorrect username or password"
        android:textColor="@color/error"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/loginEmailID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_alignStart="@+id/loginPassword"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/loginEmailID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/loginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardBackgroundColor="@color/logoColor"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/cardView"
            android:layout_alignStart="@+id/login"
            android:layout_alignTop="@+id/login"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Login"
                android:textColor="#FF000000"
                android:textSize="25dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="new user? SignUp" />


</RelativeLayout>
