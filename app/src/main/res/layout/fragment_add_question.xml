<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashankmohabia.morphme.MainGame.Fragments.AdminFragments.AddQuestions.AddQuestionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/slider_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionAdditionError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/error"
            android:visibility="invisible" />

        <Spinner
            android:id="@+id/selectPhase"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"></Spinner>

        <Spinner
            android:id="@+id/selectLevel"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"></Spinner>

        <EditText
            android:id="@+id/questionCaption"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_sort_by_alpha_white_24dp"
            android:ems="10"
            android:hint="Question's Caption"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/questionMedia"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp" />

        <Spinner
            android:id="@+id/selectAns"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"></Spinner>

        <EditText
            android:id="@+id/companionQuestion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_sort_by_alpha_white_24dp"
            android:ems="10"
            android:hint="Companion Question"
            android:inputType="textPersonName" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardAddQuestion"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="@color/logoColor"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/cardAddQuestion"
                android:layout_alignStart="@+id/cardAddQuestion"
                android:layout_alignTop="@+id/cardAddQuestion">

                <TextView
                    android:id="@+id/textRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Add"
                    android:textColor="#FF000000"
                    android:textSize="25dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</FrameLayout>
